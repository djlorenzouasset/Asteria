<adonisCtrls:AdonisWindow x:Class="Asteria.Views.CosmeticLoading"
          xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
          xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
          xmlns:adonisCtrls="clr-namespace:AdonisUI.Controls;assembly=AdonisUI"
          Width="300"
          Height="300"
          WindowStyle="None"
          WindowStartupLocation="CenterScreen"
          MouseDown="OnMouseDown"
          Topmost="True">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.25*" />
            <RowDefinition Height="3*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Image Source="{Binding CosmeticIcon}" Grid.Row="1" RenderOptions.BitmapScalingMode="HighQuality" Width="200" Height="200"/>

        <StackPanel Grid.Row="2" VerticalAlignment="Center">
            <TextBlock HorizontalAlignment="Center" FontSize="15" Text="{Binding CosmeticId}" Foreground="#AAAAAA"/>
        </StackPanel>
    </Grid>

</adonisCtrls:AdonisWindow>

<adonisCtrls:AdonisWindow x:Class="Asteria.Views.Loading"
                          xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                          xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                          xmlns:adonisUi="clr-namespace:AdonisUI;assembly=AdonisUI"
                          xmlns:adonisCtrls="clr-namespace:AdonisUI.Controls;assembly=AdonisUI"
                          Width="300"
                          Height="300"
                          WindowStyle="None"
                          WindowStartupLocation="CenterScreen"
                          Loaded="OnPageLoaded"
                          MouseDown="OnMouseDown">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="{adonisUi:Space 1}"/>
            <RowDefinition Height="*" />
            <RowDefinition Height="{adonisUi:Space 1}"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="1" VerticalAlignment="Center">
            <TextBlock HorizontalAlignment="Center" FontSize="15" Text="{Binding LoadingMessage}" Foreground="#AAAAAA"/>
        </StackPanel>
    </Grid>

</adonisCtrls:AdonisWindow>
